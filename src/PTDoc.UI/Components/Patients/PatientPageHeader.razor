@* Patient Page Header Component - Header section for the Patients page *@

<div class="patients-header" data-testid="patients-header">
    <div class="patients-header-container">
        <div class="patients-header-left">
            @if (ShowBackButton)
            {
                <button type="button" class="patients-header-back-button" @onclick="OnBack" aria-label="Go back">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.6667 8H3.33333M3.33333 8L8 12.6667M3.33333 8L8 3.33333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            }
            <div class="patients-header-title-group">
                <h1 class="patients-header-title">@Title</h1>
                @if (!string.IsNullOrEmpty(Subtitle))
                {
                    <p class="patients-header-subtitle">@Subtitle</p>
                }
            </div>
        </div>
        <div class="patients-header-actions">
            @Actions
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Patients";
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public bool ShowBackButton { get; set; } = false;
    [Parameter] public EventCallback OnBack { get; set; }
}
