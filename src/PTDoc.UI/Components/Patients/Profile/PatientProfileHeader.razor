@* Patient Profile Header Component - Header for patient profile page *@

<div class="patient-profile-header" data-testid="patient-profile-header">
    <div class="patient-profile-header-left">
        <button type="button" class="patient-profile-header-back" @onclick="OnBack" aria-label="Go back">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12.6667 8H3.33333M3.33333 8L8 12.6667M3.33333 8L8 3.33333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        <div class="patient-profile-header-title-group">
            <h1 class="patient-profile-header-title">Patient Profile</h1>
            <p class="patient-profile-header-subtitle">@Patient.DisplayName</p>
        </div>
    </div>
    @if (Actions != null)
    {
        <div class="patient-profile-header-actions">
            @Actions
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired] public PatientProfileVm Patient { get; set; } = null!;
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public EventCallback OnBack { get; set; }
}
