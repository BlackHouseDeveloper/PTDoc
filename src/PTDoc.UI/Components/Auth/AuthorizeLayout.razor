@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        @ChildContent
    </Authorized>

    <NotAuthorized>
        <p>You must be logged in to access this page.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
