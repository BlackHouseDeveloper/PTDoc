@namespace PTDoc.UI.Components.Layout

@inherits LayoutComponentBase


<div class="page">
    <GlobalHeader @bind-IsMenuOpen="isMenuOpen" />
    
    <div class="page-content">
        <div class="sidebar @GetSidebarClass()">
            <NavMenu />
        </div>

        <main>
            <article class="content">
                @Body
            </article>
        </main>
    </div>
</div>

@code {
    private bool isMenuOpen = true; // Default to open on desktop
    
    private string GetSidebarClass()
    {
        var cssClass = isMenuOpen ? "open" : "closed";
        Console.WriteLine($"[MainLayout] Menu state: {isMenuOpen}, CSS class: {cssClass}");
        return cssClass;
    }
}

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
