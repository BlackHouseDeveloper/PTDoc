@* Appointments Page Header Component *@

<div class="appointments-header">
    <div class="header-content">
        <div class="header-text">
            <h1>@Title</h1>
            <p>@Subtitle</p>
        </div>
        @if (Actions != null)
        {
            @Actions
        }
        else
        {
            <button type="button" class="new-appointment-btn">
                <svg class="btn-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8 3.33337V12.6667M3.33334 8H12.6667" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>New Appointment</span>
            </button>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Appointments";

    [Parameter]
    public string Subtitle { get; set; } = "Daily schedule management";

    [Parameter]
    public RenderFragment? Actions { get; set; }
}
