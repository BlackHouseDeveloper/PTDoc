@* Patient Status Overview Component *@

<div class="patient-status-overview">
    <div class="overview-header">
        <svg class="header-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 5H7C5.89543 5 5 5.89543 5 7V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V7C19 5.89543 18.1046 5 17 5H15M9 5C9 6.10457 9.89543 7 11 7H13C14.1046 7 15 6.10457 15 5M9 5C9 3.89543 9.89543 3 11 3H13C14.1046 3 15 3.89543 15 5M12 12H15M12 16H15M9 12H9.01M9 16H9.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <h3>Overview</h3>
    </div>
    
    <div class="status-metrics">
        <div class="metric-item">
            <div class="metric-value total">@TotalCount</div>
            <div class="metric-label">Total</div>
        </div>
        
        <div class="metric-item">
            <div class="metric-value in-progress">@InProgressCount</div>
            <div class="metric-label">In Progress</div>
        </div>
        
        <div class="metric-item">
            <div class="metric-value checked-in">@CheckedInCount</div>
            <div class="metric-label">Checked In</div>
        </div>
        
        <div class="metric-item">
            <div class="metric-value missing-intake">@MissingIntakeCount</div>
            <div class="metric-label">Missing Intake</div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int TotalCount { get; set; } = 12;

    [Parameter]
    public int InProgressCount { get; set; } = 1;

    [Parameter]
    public int CheckedInCount { get; set; } = 1;

    [Parameter]
    public int MissingIntakeCount { get; set; } = 2;
}
