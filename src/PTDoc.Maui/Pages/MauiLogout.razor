@page "/logout"
@namespace PTDoc.Maui.Pages
@using Microsoft.Extensions.Logging
@using PTDoc.Application.Auth
@inject IUserService UserService
@inject NavigationManager Navigation
@inject ILogger<MauiLogout> Logger

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h3>Logging out...</h3>
            <p>Please wait while we securely end your session.</p>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("MAUI user initiated logout");
            
            // Call logout which clears tokens and notifies auth state provider
            await UserService.LogoutAsync();
            
            Logger.LogInformation("MAUI logout complete, navigating to login");
            
            // Navigate to login with force reload
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during MAUI logout");
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }
}