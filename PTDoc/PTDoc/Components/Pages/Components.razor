@page "/components"
@using PTDoc.Components.UIComponents

<PageTitle>PTDoc Components</PageTitle>

<div class="ptdoc-container">
    <h1 class="ptdoc-text-3xl ptdoc-font-bold ptdoc-mb-lg">PTDoc Design System Components</h1>
    
    <PTDocAlert Variant="info" Title="Component Showcase" Dismissible="false">
        This page demonstrates all the core components of the PTDoc Design System with WCAG AA compliance, 
        44px touch targets, and light/dark theme support.
    </PTDocAlert>

    <!-- Buttons Section -->
    <PTDocCard>
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Buttons</h2>
        </Header>
        <ChildContent>
            <div style="display: flex; gap: 16px; flex-wrap: wrap; align-items: center;">
                <PTDocButton Variant="primary">Primary Button</PTDocButton>
                <PTDocButton Variant="secondary">Secondary Button</PTDocButton>
                <PTDocButton Variant="outline">Outline Button</PTDocButton>
                <PTDocButton Variant="ghost">Ghost Button</PTDocButton>
                <PTDocButton Variant="danger">Danger Button</PTDocButton>
                <PTDocButton Variant="primary" Disabled="true">Disabled</PTDocButton>
            </div>
            <div style="display: flex; gap: 16px; flex-wrap: wrap; align-items: center; margin-top: 16px;">
                <PTDocButton Size="small" Variant="primary">Small</PTDocButton>
                <PTDocButton Size="medium" Variant="primary">Medium</PTDocButton>
                <PTDocButton Size="large" Variant="primary">Large</PTDocButton>
            </div>
        </ChildContent>
    </PTDocCard>

    <!-- Cards Section -->
    <PTDocCard style="margin-top: 24px;">
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Cards</h2>
        </Header>
        <ChildContent>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 16px;">
                <PTDocCard Variant="default">
                    <Header>Default Card</Header>
                    <ChildContent>This is a default card with shadow.</ChildContent>
                </PTDocCard>
                
                <PTDocCard Variant="elevated">
                    <Header>Elevated Card</Header>
                    <ChildContent>This card has more prominent shadow.</ChildContent>
                </PTDocCard>
                
                <PTDocCard Variant="bordered" Hoverable="true">
                    <Header>Hoverable Card</Header>
                    <ChildContent>Hover over this card to see the effect.</ChildContent>
                </PTDocCard>
            </div>
        </ChildContent>
    </PTDocCard>

    <!-- Inputs Section -->
    <PTDocCard style="margin-top: 24px;">
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Form Inputs</h2>
        </Header>
        <ChildContent>
            <PTDocInput Label="Full Name" 
                       Placeholder="Enter your full name" 
                       Required="true"
                       HelperText="This field is required" />
            
            <PTDocInput Label="Email Address" 
                       InputType="email" 
                       Placeholder="you@example.com" />
            
            <PTDocInput Label="Password" 
                       InputType="password" 
                       Placeholder="Enter password" />
            
            <PTDocInput Label="Date of Birth" 
                       InputType="date" />
            
            <PTDocInput Label="Comments" 
                       InputType="textarea" 
                       Rows="4"
                       Placeholder="Enter your comments here..." />
            
            <PTDocInput Label="Error Example" 
                       ErrorMessage="This field has an error" 
                       Placeholder="Invalid input" />
        </ChildContent>
    </PTDocCard>

    <!-- Badges Section -->
    <PTDocCard style="margin-top: 24px;">
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Badges</h2>
        </Header>
        <ChildContent>
            <div style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                <PTDocBadge Variant="default">Default</PTDocBadge>
                <PTDocBadge Variant="primary">Primary</PTDocBadge>
                <PTDocBadge Variant="success">Success</PTDocBadge>
                <PTDocBadge Variant="warning">Warning</PTDocBadge>
                <PTDocBadge Variant="error">Error</PTDocBadge>
                <PTDocBadge Variant="info">Info</PTDocBadge>
            </div>
            <div style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center; margin-top: 16px;">
                <PTDocBadge Variant="primary" Pill="true">Pill Badge</PTDocBadge>
                <PTDocBadge Variant="success" Pill="true">Active</PTDocBadge>
                <PTDocBadge Variant="warning" Pill="true">Pending</PTDocBadge>
            </div>
            <div style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center; margin-top: 16px;">
                <PTDocBadge Size="small" Variant="info">Small</PTDocBadge>
                <PTDocBadge Size="medium" Variant="info">Medium</PTDocBadge>
                <PTDocBadge Size="large" Variant="info">Large</PTDocBadge>
            </div>
        </ChildContent>
    </PTDocCard>

    <!-- Alerts Section -->
    <PTDocCard style="margin-top: 24px;">
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Alerts</h2>
        </Header>
        <ChildContent>
            <PTDocAlert Variant="info" Title="Information" Icon="ℹ️">
                This is an informational alert message.
            </PTDocAlert>
            
            <PTDocAlert Variant="success" Title="Success" Icon="✓">
                Your action was completed successfully!
            </PTDocAlert>
            
            <PTDocAlert Variant="warning" Title="Warning" Icon="⚠️">
                Please review this information carefully.
            </PTDocAlert>
            
            <PTDocAlert Variant="error" Title="Error" Icon="✕">
                An error occurred while processing your request.
            </PTDocAlert>
            
            <PTDocAlert Variant="info" Dismissible="true">
                This alert can be dismissed.
            </PTDocAlert>
        </ChildContent>
    </PTDocCard>

    <!-- Modal Section -->
    <PTDocCard style="margin-top: 24px;">
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Modal</h2>
        </Header>
        <ChildContent>
            <PTDocButton Variant="primary" OnClick="@(() => showModal = true)">Open Modal</PTDocButton>
            
            <PTDocModal @bind-IsOpen="showModal" Title="Sample Modal" Size="medium">
                <ChildContent>
                    <p>This is a modal dialog with accessible keyboard navigation and focus management.</p>
                    <p>It demonstrates WCAG AA compliance with proper ARIA attributes.</p>
                </ChildContent>
                <Footer>
                    <PTDocButton Variant="ghost" OnClick="@(() => showModal = false)">Cancel</PTDocButton>
                    <PTDocButton Variant="primary" OnClick="@(() => showModal = false)">Confirm</PTDocButton>
                </Footer>
            </PTDocModal>
        </ChildContent>
    </PTDocCard>

    <!-- Table Section -->
    <PTDocCard style="margin-top: 24px;">
        <Header>
            <h2 class="ptdoc-text-xl ptdoc-font-semibold">Table</h2>
        </Header>
        <ChildContent>
            <PTDocTable Items="@sampleData" Striped="true" Hoverable="true">
                <TableHeader>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </TableHeader>
                <RowTemplate>
                    <td>@context.Name</td>
                    <td>
                        <PTDocBadge Variant="@context.BadgeVariant" Pill="true">@context.Status</PTDocBadge>
                    </td>
                    <td>@context.Date.ToShortDateString()</td>
                    <td>
                        <PTDocButton Size="small" Variant="outline">View</PTDocButton>
                    </td>
                </RowTemplate>
            </PTDocTable>
        </ChildContent>
    </PTDocCard>
</div>

@code {
    private bool showModal = false;

    private class SampleData
    {
        public string Name { get; set; } = "";
        public string Status { get; set; } = "";
        public string BadgeVariant { get; set; } = "";
        public DateTime Date { get; set; }
    }

    private List<SampleData> sampleData = new()
    {
        new SampleData { Name = "John Doe", Status = "Active", BadgeVariant = "success", Date = DateTime.Now.AddDays(-5) },
        new SampleData { Name = "Jane Smith", Status = "Pending", BadgeVariant = "warning", Date = DateTime.Now.AddDays(-3) },
        new SampleData { Name = "Bob Johnson", Status = "Active", BadgeVariant = "success", Date = DateTime.Now.AddDays(-1) },
        new SampleData { Name = "Alice Williams", Status = "Inactive", BadgeVariant = "error", Date = DateTime.Now.AddDays(-10) },
    };
}
