@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page" data-theme="@currentTheme">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <button class="theme-toggle" @onclick="ToggleTheme" aria-label="Toggle theme">
                @(currentTheme == "light" ? "🌙 Dark Mode" : "☀️ Light Mode")
            </button>
            <a href="https://github.com/BlackHouseDeveloper/PTDoc" target="_blank">GitHub</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string currentTheme = "light";

    private async Task ToggleTheme()
    {
        currentTheme = currentTheme == "light" ? "dark" : "light";
        await JS.InvokeVoidAsync("localStorage.setItem", "theme", currentTheme);
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedTheme = await JS.InvokeAsync<string>("localStorage.getItem", "theme");
            if (!string.IsNullOrEmpty(savedTheme))
            {
                currentTheme = savedTheme;
                StateHasChanged();
            }
        }
    }
}
